@model Project.ViewModels.ProfileViewModel

@{
    ViewData["Title"] = "Профиль";
}

<div class="container mt-4">
    <h2>Профиль пользователя</h2>
    <div class="card">
        <div class="card-body">
            <p class="card-text"><strong>Логин:</strong> @Model.UserName</p>
            <p class="card-text"><strong>Имя:</strong> @Model.FirstName</p>
            <p class="card-text"><strong>Фамилия:</strong> @Model.LastName</p>
            <p class="card-text"><strong>Отчество:</strong> @Model.FatherName</p>
            <p class="card-text"><strong>Номер группы:</strong> @Model.GroupNumber</p>
            <p class="card-text"><strong>Роль:</strong> @Model.Role</p>

            @if (User.IsInRole("Admin"))
            {
                <a href="@Url.Action("Index", "Admin")" class="btn btn-warning">Управление пользователями</a>
            }

            <!-- Кнопка выхода -->
            <form asp-controller="Account" asp-action="Logout" method="post" style="display:inline;">
                <button type="submit" class="btn btn-danger">Выход</button>
            </form>
        </div>
    </div>
</div>
