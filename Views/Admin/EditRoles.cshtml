@model Project.Areas.Admin.ViewModels.EditRolesViewModel

<h2>Редактирование ролей для пользователя @Model.UserName</h2>

<form asp-action="UpdateRoles" method="post">
    <input type="hidden" name="userId" value="@Model.UserId" />

    <div class="form-group">
        <label>Выберите роль:</label>
        <div class="d-flex flex-column">
            @foreach (var role in Model.AllRoles)
            {
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="roleNames" value="@role"
                           @(Model.AssignedRoles.Contains(role) ? "checked" : "") id="role_@role">
                    <label class="form-check-label" for="role_@role">@role</label>
                </div>
            }
        </div>
    </div>

    <button type="submit" class="btn btn-primary">Обновить роли</button>
</form>

<a asp-action="Index" class="btn btn-secondary">Назад</a>
