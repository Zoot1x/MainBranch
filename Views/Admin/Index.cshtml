@model IEnumerable<Project.Models.User>

<h2>Список пользователей</h2>

<table class="table">
    <thead>
        <tr>
            <th>Логин</th>
            <th>Имя</th>
            <th>Фамилия</th>
            <th>Отчество</th>
            <th>Номер группы</th>
            <th>Роль</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.UserName</td>
                <td>@user.Name</td>
                <td>@user.LastName</td>
                <td>@user.FatherName</td>
                <td>@user.GroupNumber</td>
                <td>@user.Role.ToString()</td> <!-- Отображаем роль пользователя -->
                <td>
                    <a asp-controller="Admin" asp-action="EditRoles" asp-route-userId="@user.Id" class="btn btn-warning">Редактировать роли</a>
                </td>
            </tr>
        }
    </tbody>
</table>
