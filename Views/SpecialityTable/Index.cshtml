@model IEnumerable<Project.Models.Parser.Speciality>

<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <title>Список Специальностей</title>
    <style>
        table {
            width: 100%;
            border-collapse: collapse;
        }
        th, td {
            padding: 8px;
            text-align: center;
            border: 1px solid #999;
        }
        .title {
            text-align: left;
        }
        tr:hover {
            background-color: #f5f5f5;
        }
    </style>
</head>
<body>
    <h1>Список Специальностей</h1>
    <table border="1">
        <thead>
            <tr>
                <th>№</th>
                <th>Id</th>
                <th class="title">Название</th>
                <th>Дисциплины</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                int ordinal = 1;
                foreach (var speciality in Model)
                {
                    <tr>
                        <td>@ordinal</td>
                        <td>@speciality.Id</td>
                        <td class="title">@speciality.Title</td>
                        <td>
                            <a href="@Url.Action("Index", "DisciplineTable", new { specialityId = speciality.Id })">Список дисциплин</a>
                        </td>
                    </tr>
                    ordinal++; 
                }
            }
            else
            {
                <tr>
                    <td colspan="2">Нет данных для отображения.</td>
                </tr>
            }
        </tbody>
    </table>
    <p>Всего Специальностей: @Model.Count()</p> <!-- Общее количество специальностей -->
</body>
</html>
