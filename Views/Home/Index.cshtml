<!DOCTYPE html>
<html lang="ru">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Дисциплины</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <style>
        .main {
            display: flex;
            flex-direction: column; /* Вертикальная компоновка */
            align-items: flex-start; /* Выровнять по левому краю */
            margin-top: 20px; /* Отступ сверху */
        }

        .card {
            width: 100%; /* Ширина карточек */
            max-width: 300px; /* Максимальная ширина карточки */
            margin-bottom: 15px; /* Отступ между карточками */
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1); /* Легкая тень для глубины */
        }

        .card-body {
            padding: 10px; /* Уменьшение отступов внутри карточки */
        }
    </style>
</head>

<body>
    <div class="container main">
        <h2>Дисциплины для группы</h2>

        @model IEnumerable<Project.Areas.Admin.Models.Parser.Discipline>

        @if (Model != null && Model.Any())
        {
            foreach (var discipline in Model)
            {
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">@discipline.Title</h5>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="alert alert-warning" role="alert">
                Дисциплины не найдены.
            </div>
        }
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
