@model Project.Areas.Admin.Models.Parser.Group
@using Project.Areas.Admin.Models.Parser

<h1>Create Group</h1>

@if (TempData["SuccessMessage"] != null)

{

    <div class="alert alert-success">

        @TempData["SuccessMessage"]

    </div>

}

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="Number"></label>
        <input asp-for="Number" class="form-control" />
        <span asp-validation-for="Number" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CadetsNumber"></label>
        <input asp-for="CadetsNumber" class="form-control" />
        <span asp-validation-for="CadetsNumber" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Speciality"></label>
        <select asp-for="SpecialityId" class="form-control" asp-items="@(new SelectList(ViewBag.Specialities, "Id", "Title"))">
            <option value="">Select Speciality</option>
        </select>

        <span asp-validation-for="Speciality" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
