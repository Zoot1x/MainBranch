@using Project.Models
@using System.Security.Claims
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/variables.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Project.styles.css" asp-append-version="true" />
    <link href="~/fontawesome/css/fontawesome.css" rel="stylesheet" />
    <link href="~/fontawesome/css/brands.css" rel="stylesheet" />
    <link href="~/fontawesome/css/solid.css" rel="stylesheet" />

    <link rel="stylesheet" href="~/favicon.ico" rel="icon" type="image/x-icon">
</head>

<style>
    .btn-logging {
        margin-right: 5px;
    }

    .profile_bar {
        display: flex;
        justify-content: center;
        align-items: center;
        color: black;
        transition: all .2s;
    }

    .profile_bar i {
        font-size: 20px;
    }

    .profile_bar a {
        color: black;
        transition: all .2s;
    }

    .profile_bar:hover {
        color: #4f4f4f;
        /* Цвет текста при наведении */
    }
    .profile_bar:hover a{
        color: #4f4f4f;
        /* Цвет текста при наведении */
    }
</style>

<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container">
            <img style="width: 30px; margin-right: 10px;" src="~/image/logo.png" alt="">
            <a class="navbar-brand" href="@Url.Action("Index", "Home")">ЯВВУ ПВО</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="#">Портал ЯВВУ</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Портфолио</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Расписание</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Электронная Библиотека</a>
                    </li>
                </ul>
            </div>
            <div class="ml-auto d-flex align-items-center">
                @if (User.Identity.IsAuthenticated)
                {
                    <span class="mr-3">
                        <div class="profile_bar">
                            <i class="fa-regular fa-circle-user" style="margin-right: 10px;"></i>
                            <a style="text-decoration: none;" asp-controller="Profile"
                                asp-action="Index"><strong>@User.Identity.Name</strong></a>
                        </div>
                    </span>
                }
                else
                {
                    <a class="btn btn-outline-primary btn-logging btn-sm" href="@Url.Action("Login", "Account")">Вход</a>
                    <a class="btn btn-outline-primary btn-register btn-sm" href="@Url.Action("Register", "Account")">Регистрация</a>
                }
            </div>
        </div>
    </nav>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="bg-light text-center text-lg-start mt-4">
        <div class="text-center p-3">
            © 2024 ЯВВУ ПВО. Все права защищены.
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
